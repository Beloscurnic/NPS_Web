@using ISNPSWeb.Models;

@model ForgotPasswordViewModel_DTO;

@{
    ViewData["Title"] = "Forgot Password";
    Layout = "~/Views/_Shared/_BlankLayout.cshtml";
}
<div class="account-pages" style="margin-top: 13vh !important;">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="text-center">
                    <a href="#" class="d-block auth-logo">
                        <img src="~/assets/images/intelectsoft/logo/IS-long-green.svg" alt="" height="220" class="logo logo-dark">
                    </a>
                </div>
            </div>
        </div>
        <div class="row align-items-center justify-content-center">
            <div class="col-md-8 col-lg-6 col-xl-5">
                <div class="card">
                    <div class="card-body p-4">
                        <div class="text-center mt-2">
                            <h5 class="text-success">Востановление пароля</h5>
                        </div>
                        <div class="p-2 mt-4">
                            <form name="resetPassword" asp-controller="Account" asp-action="ForgotPassword" method="POST">
                                <div class="col-md-12">
                                    @(Html.DevExtreme().TextBoxFor(m => m.Email).ID("Email").LabelMode(EditorLabelMode.Floating).Label("Email"))
                                </div>
                                <div class="col-md-12 pt-3">
                                    <div class="row">
                                    </div>
                                </div>
                                <div class="col-md-12 pt-4">
                                    @(Html.DevExtreme().Button().Type(ButtonType.Success).Text("Забыли пароль").OnClick("onSubmitClickResetPass").Width("100%"))
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/js/Pages/Account/forgotPassword.js"></script>

